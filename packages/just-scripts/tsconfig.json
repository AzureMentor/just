{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "lib",
    "strict": true,
    "strictBindCallApply": false,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "sourceMap": true
  },
  "include": ["src", "typings/*.d.ts"]
}
